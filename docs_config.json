{
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/better-docs", 
        "encoding": "utf8",               
        "destination": "./docs",          
        "recurse": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false,
        "search": true
    },
        "better-docs": {
            "name": "mediumroast.io sdk documentation",
            "logo": "images/mr_logo.png",
            "title": "SDK Documentation for the mediumroast.io",

	        "hideGenerator": false,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/mediumroast/mediumroast_js"
                }
            ]
        }
}