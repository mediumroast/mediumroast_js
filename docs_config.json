{
    "plugins": [
        "plugins/markdown",
        "plugins/summarize"
    ],
    "opts": {
        "template": "node_modules/better-docs", 
        "encoding": "utf8",               
        "destination": "./docs",          
        "recurse": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": false,
        "search": true
    },
        "better-docs": {
            "name": "Mediumroast for GitHub SDK",
            "logo": "images/mr_logo.png",
            "title": "Mediumroast for GitHub SDK Documentation",
            "style": "style.css",
	        "hideGenerator": false,
            "navLinks": [
                {
                    "label": "Mediumroast for GitHub JavaScript SDK",
                    "href": "https://github.com/mediumroast/mediumroast_js"
                }
            ]
        }
}